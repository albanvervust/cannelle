<h1>Les différentes invitations en cours</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Date</th>
    <th>Description</th>
    <th>Convives</th>
    <th>Price</th>
    <th>Tag</th>
    <th>Note</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invitations.each do |invitation| %>
  <tr>
    <td><%= invitation.name %></td>
    <td><%= invitation.date %></td>
    <td><%= invitation.description %></td>
    <td><%= invitation.convives %></td>
    <td><%= invitation.price %></td>
    <td><%= invitation.tag %></td>
    <td><%= invitation.note %></td>
    <td><%= invitation.comment %></td>
    <td><%= link_to 'Voir', invitation %></td>
    <td><%= link_to 'Modifier', edit_invitation_path(invitation) %></td>
    <td><%= link_to 'Supprimer', invitation, :confirm => 'Etes-vous sûr?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

