<h1>Les différentes invitations en cours</h1>

<div id="calendar">
  <h2 id="month">
    <%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m") %>
    <%=h @date.strftime("%B %Y") %>
    <%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m") %>
  </h2>
  <% calendar_for @articles, :year => @date.year, :month => @date.month do |calendar| %>
    <%= calendar.head('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday') %>
    <% calendar.day(:day_method => :published_on) do |date, articles| %>
      <%= date.day %>
      <ul>
        <% for article in articles %>
          <li><%= link_to h(article.name), article %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>










<table>
  <tr>
    <th>Name</th>
    <th>Date</th>
    <th>Description</th>
    <th>Convives</th>
    <th>Price</th>
    <th>Tag</th>
    <th>Note</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invitations.each do |invitation| %>
  <tr>
    <td><%= invitation.name %></td>
    <td><%= invitation.date %></td>
    <td><%= invitation.description %></td>
    <td><%= invitation.convives %></td>
    <td><%= invitation.price %></td>
    <td><%= invitation.tag %></td>
    <td><%= invitation.note %></td>
    <td><%= invitation.comment %></td>
    <td><%= link_to 'Voir', invitation %></td>
    <td><%= link_to 'Modifier', edit_invitation_path(invitation) %></td>
    <td><%= link_to 'Supprimer', invitation, :confirm => 'Etes-vous sûr?', :method => :delete %></td>
  </tr>
<% end %>
</table>

