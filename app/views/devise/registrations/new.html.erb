<h2>S'inscrire</h2>

<%= form_for(@resource, :as => :name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_messages %>
  <p><%= f.label :email ,'Email'%></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.label :username ,'Nom d\'utilisateur'%></p>
  <p><%= f.text_field :username %></p>

  <p><%= f.label :password ,'Mot de passe'%></p>
  <p><%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation ,'Confirmez le mot de passe'%></p>
  <p><%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "S'inscrire" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
